# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.6/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.
[client]
default-character-set=utf8mb4


[mysql]
port            = {{mysql_port}}
socket          = {{mysql_var_dir}}/mysql.sock
#host		= localhost
default-character-set=utf8mb4
no-auto-rehash

[mysqld]
user = {{mysql_run_user}}
#skip-grant-tables=1
basedir = {{mysql_base_dir}}
datadir = {{mysql_data_dir}}
port = {{mysql_port}}
socket = {{mysql_sock}}
character-set-client-handshake = FALSE
character-set-server=utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect='SET NAMES utf8mb4'
skip_name_resolve = 1
external-locking = FALSE
lower_case_table_names=1

back_log = 360
max_connections = 5000
max_connect_errors = 6000
explicit_defaults_for_timestamp=true

log-error = {{mysql_log_dir}}/mysql_err.log
pid-file = {{mysql_var_dir}}/mysql.pid

#table_open_cache = 512
table_open_cache = 8192
max_allowed_packet = 16M
sort_buffer_size = 2M
join_buffer_size = 4M
thread_cache_size = 100

query_cache_size = 16M
#query_cache_type = 0
tmp_table_size = 96M
max_heap_table_size = 96M

# slow_query log
slow_query_log = 1
slow_query_log_file = {{mysql_log_dir}}/slow.log
#long_query_time = 0.1

# replication 
skip-slave-start=1
server-id = {{ ansible_default_ipv4.address.split(".")[-1] }}
binlog-format=ROW
log-bin = {{mysql_binlog_dir}}/mysql-bin
sync_binlog = 1
binlog_cache_size = 4M
#max_binlog_cache_size = 12M
max_binlog_size = 1G
expire_logs_days = 15

log-slave-updates=true
gtid-mode=on
enforce-gtid-consistency=true
master-info-repository=TABLE
relay-log-info-repository=TABLE
sync-master-info=1
slave-parallel-workers=5
binlog-checksum=CRC32
master-verify-checksum=1
slave-sql-verify-checksum=1
binlog-rows-query-log_events=1

log_bin_trust_function_creators =1
report-port={{mysql_port}}
report-host={{ansible_fqdn}}

relay-log = {{mysql_binlog_dir}}/mysql-relay-bin
relay-log-info-file = {{mysql_binlog_dir}}/relay-log.info
replicate-wild-ignore-table=mysql.%
replicate-wild-ignore-table=test.%
replicate-wild-ignore-table=sys.%
replicate-wild-ignore-table=information_schema.%
replicate-wild-ignore-table=performance_schema.%

auto_increment_increment=2
auto_increment_offset=1

# 
key_buffer_size = 256M
read_buffer_size = 4M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 32M

# myisam table 
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1
# myisam_recover

# innodb table
innodb_file_per_table = 1
innodb_status_file = 1
innodb_numa_interleave = 1

innodb_purge_threads = 4
innodb_read_io_threads = 8
innodb_write_io_threads = 8


innodb_old_blocks_pct = 37 # lru table chkpoint
innodb_old_blocks_time = 1000 # default is 1000
innodb_open_files = 653500 # default is 512, notice ulimit -n value

innodb_max_dirty_pages_pct = 80 # default is 75
innodb_lru_scan_depth = 1024 # lru free page table,default is 1024
innodb_support_xa = 1


#innodb_additional_mem_pool_size = 4M
#innodb_buffer_pool_size = 32G
innodb_buffer_pool_size = {{ansible_memtotal_mb/2}}M
innodb_buffer_pool_instances = 4
#innodb_buffer_pool_load_at_startup = 1
#innodb_buffer_pool_dump_at_shutdown = 1
innodb_data_file_path = ibdata1:1024M:autoextend
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 64M
innodb_log_file_size = 256M
innodb_log_files_in_group = 3
#innodb_io_capacity = 100
innodb_thread_concurrency = 0
#innodb_max_dirty_pages_pct = 50
#innodb_flush_method = O_DSYNC
#innodb_flush_method = O_DIRECT
#innodb_file_format = Barracuda   #  deprecated and the parameter may be removed in future releases
#innodb_file_format_max = Barracuda   #  deprecated and the parameter may be removed in future releases
innodb_lock_wait_timeout = 10
#innodb_rollback_on_timeout = 1
#innodb_print_all_deadlocks = 1


sql_mode='NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER'


[mysqldump]
quick
max_allowed_packet = 32M
